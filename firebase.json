
{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs20",
      "https": [
        "prospect",
        "analyze"
      ],
      "firestore": {
        "document": "prospecting_jobs/{jobId}",
        "event": "onDocumentCreated",
        "entryPoint": "onProspectingJobCreated"
      },
      "schedule": {
        "job": "monitorStaleJobs",
        "schedule": "every 15 minutes"
      }
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    }
  }
}
