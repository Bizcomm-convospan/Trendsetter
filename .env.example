# ==============================================================================
# Trendsetter Pro Environment Variables
# ==============================================================================
#
# Copy this file to .env and fill in the values for your project.
# The .env file is ignored by git, so your secrets are safe.

# ------------------------------------------------------------------------------
# Firebase Project Configuration
# Found in: Firebase Console > Project settings > General > Your apps > Web app
# ------------------------------------------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# ------------------------------------------------------------------------------
# Firebase Admin SDK Configuration
# Found in: Firebase Console > Project settings > Service accounts > Generate new private key
# ------------------------------------------------------------------------------
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
# The private key often has newlines; wrap it in quotes to preserve them.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ------------------------------------------------------------------------------
# Deployed Service URLs
# ------------------------------------------------------------------------------
# URL for the 'prospect' function.
# Found in: Firebase Console > Functions > Dashboard
PROSPECTING_FUNCTION_URL="your-firebase-cloud-function-url-for-prospect"

# URL for the standalone crawler service.
# Found in: Your hosting provider (e.g., Cloud Run)
CRAWLER_SERVICE_URL="your-crawler-service-url"

# ------------------------------------------------------------------------------
# Security Keys
# ------------------------------------------------------------------------------
# Secure API key for the /api/job-status endpoint, used by external plugins.
# Generate a strong, random string for this value.
STATUS_API_KEY="your-secret-api-key-here"
